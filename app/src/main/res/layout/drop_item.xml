<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="5dp"
    android:elevation="10dp"
    android:orientation="vertical"
    android:padding="15dp">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_height="match_parent">
    <TextView
        android:paddingBottom="10dp"
        android:id="@+id/tarif_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ywngil"
        android:textAllCaps="true"
        android:textColor="#ED5A5A"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abonent to'lovi:\nChiquvchi O'zbekiston bo'yicha:\nInternet:\nSMS:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="5dp">

            <TextView
                android:id="@+id/tarif_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8,000 so'm"
                android:textAlignment="textStart"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tarif_minute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="80 daq."
                android:textAlignment="textStart"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tarif_mb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="80 MB."
                android:textAlignment="textStart"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tarif_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="80 ta"
                android:textAlignment="textStart"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Limitdan tashqari hamma narsa 9 so'm (daqiqa, SMS, MB)."
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Ushbu xizmatni faqatgina rasmiy ofislarda ulatish mumkin."
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>

</androidx.cardview.widget.CardView>